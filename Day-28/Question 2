1448. Count Good Nodes in Binary Tree
solution

class Solution {
public:
    int goodNodes(TreeNode* root) {
        return dfs(root, root->val);
    }
    int dfs(TreeNode* node, int maxVal) {
        if (!node) return 0;
        int count = 0;
        if (node->val >= maxVal) {
            count = 1;
            maxVal = node->val;
        }
        return count + dfs(node->left, maxVal) + dfs(node->right, maxVal);
    }
};
